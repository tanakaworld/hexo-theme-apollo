if page && page.path !== "404.html" && page.title
    - var title = page.title
    - var share_url = url.replace(/index\.html$/, '');

    .share-buttons
        ul.share-buttons-list
            li.share-buttons-list-item
                a.icon.icon-twitter(data-fullpath=url href="https://twitter.com/intent/tweet?text=#{title}&url=#{share_url}&via=_tanakaworld" onclick="window.open(#{share_url}, 'twitter-share', 'width=550,height=235');return false;" target="_blank")
                    img(src="/images/icon-twitter.svg")
            li.share-buttons-list-item
                a.icon.icon-facebook(href="https://www.facebook.com/sharer/sharer.php?u=#{share_url}" data-fullpath=url onclick="window.open(#{share_url}, 'facebook-share','width=580,height=296');return false;" target="_blank")
                    img(src="/images/icon-facebook.svg")
